module rgb_digit_selector (
    input cd[16], // rgb data from register
    input rgb_sig[6], // [5:4] = register; [3:2] = digit; [1:0] = colour 1/2/3
    input cb, // high contrast signal
    output cur_rgb[3]
  ) {

rgb_selector rgb;
digit_selector sel; // generic digit selector module

  always {
  
    sel.data = cd;
    sel.digit = rgb_sig[3:2];
    rgb.cd = sel.out;
    rgb.cb = cb;
    rgb.rgb_sig = rgb_sig;
    cur_rgb = rgb.cur_rgb;
  }
}
